<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <!--
    configuration的Properties variabless属性
  -->
  <properties resource="jdbc.properties">
    <property name="jdbc.driver" value="com.mysql.jdbc.Drivers"/>
  </properties>




  <!--
    configuration里面的属性，最终是通过configration的set方法赋值
    数据库 user_name 实体类 userName
  -->
  <settings>
    <setting name="mapUnderscoreToCamelCase" value="true"/>
    <setting name="useGeneratedKeys" value="true"/>
    <!--<setting name="autoMappingBehavior" value="FULL"/>-->
  </settings>

  <!--
    configuration->typeAliasRegister->typeAliases
    configuration的构造方法和typeAliasRegister的构造方法里面都有相应的别名注册
  -->
  <typeAliases>
    <!--<typeAlias type="com.itheima.domain.User" alias="asd"/>-->
    <package name="com.itheima.domain"/>
  </typeAliases>

  <typeHandlers>
   <!-- <typeHandler handler=""-->
    <package name="com.itheima.typehandler"/>
  </typeHandlers>

  <plugins>
    <plugin interceptor="com.itheima.plugins.ExamplePlugin"/>
  </plugins>
  <!--
     读default指定的environment节点的信息把信息保存到一个configration->Environment
  -->
  <environments default="development">
    <environment id="development">
      <!--配置事务,MyBatis事务用的是jdbc  connection.commit()-->
      <transactionManager type="JDBC"/>
      <!--配置连接池, POOLED:使用连接池(mybatis内置的); UNPOOLED:不使用连接池-->
      <dataSource type="POOLED">
        <property name="driver" value="${jdbc.driver}"/>
        <property name="url" value="${jdbc.url}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
      </dataSource>
    </environment>
    <environment id="development1">
      <!--配置事务,MyBatis事务用的是jdbc  connection.commit()-->
      <transactionManager type="JDBC"/>
      <!--配置连接池, POOLED:使用连接池(mybatis内置的); UNPOOLED:不使用连接池-->
      <dataSource type="POOLED">
        <property name="driver" value="${jdbc.driver}"/>
        <property name="url" value="${jdbc.url}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
      </dataSource>
    </environment>
    <environment id="development2">
      <!--配置事务,MyBatis事务用的是jdbc  connection.commit()-->
      <transactionManager type="JDBC"/>
      <!--配置连接池, POOLED:使用连接池(mybatis内置的); UNPOOLED:不使用连接池-->
      <dataSource type="POOLED">
        <property name="driver" value="${jdbc.driver}"/>
        <property name="url" value="${jdbc.url}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
      </dataSource>
    </environment>
  </environments>

  <mappers>
    <!--
      1.xml方式初始化
          resource或者url
      2.接口方式
          class或者package
    -->
    <!--
      xml
       <mapper resource=""/>
       <mapper url=""/>
    -->
    <!--
      接口
       <mapper class=""/>
       <package name="com.itheima.mapper"/>
    -->
    <mapper resource="com/itheima/mapper/OrderMapper.xml"/>
    <mapper resource="com/itheima/mapper/UserMapper.xml"/>
    <!--<package name="com.itheima.mapper"/>-->
  </mappers>
</configuration>
